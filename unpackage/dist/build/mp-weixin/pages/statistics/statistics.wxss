.month-picker{width:100%;display:flex;justify-content:center;align-items:center;background-color:#7bc7cf;padding:5px 0}.month-picker .arrow{font-size:18px;color:#e8e8e8;margin:0 15px}.month-picker .current-month{font-size:16px;font-weight:700;color:#ebebeb}.no-bills{text-align:center;font-size:20px;color:#999;padding:20px;background-color:#fff;border-radius:10px;box-shadow:0 2px 8px rgba(0,0,0,.1);margin-bottom:20px}.bill-list{overflow-y:auto;padding:10px 0;width:100%}.bill-list .bill-item{display:flex;justify-content:space-between;align-items:center;background-color:#f8f8f8;padding:10px 25px;border-radius:1px;margin-bottom:2px;height:20px}.bill-list .bill-item .left{display:flex;align-items:center}.bill-list .bill-item .left .category-color{width:25px;height:25px;margin-right:10px}.bill-list .bill-item .left .info .category{display:block;font-size:14px;color:#505050}.bill-list .bill-item .amount{font-size:15px;color:#ffc595}.pieChartTitle,.columnChartTitle{padding:30px 10px;font-size:30;font-weight:700;color:#919191}
