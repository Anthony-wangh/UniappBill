.bills-container .bill-list {
  height: calc(100% - 150px);
  /* 减去顶部和底部模块的高度 */
  overflow-y: auto;
  width: 100%;
}
.bills-container .bill-list .no-bills {
  text-align: center;
  font-size: 20px;
  color: #999;
  padding: 20px;
  background-color: #ffffff;
  border-radius: 10px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  margin-bottom: 20px;
}
.bills-container .bill-list .date-divider {
  padding: 10px 25px;
  font-size: 14px;
  font-weight: bold;
  color: #666;
  border-bottom: 1px solid #e0e0e0;
  margin-bottom: 10px;
}
.bills-container .bill-list .bill-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #f8f8f8;
  padding: 15px 25px;
  border-radius: 5px;
  margin-bottom: 10px;
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
  height: 30px;
}
.bills-container .bill-list .bill-item .left {
  display: flex;
  align-items: center;
}
.bills-container .bill-list .bill-item .left .category-color {
  width: 35px;
  height: 35px;
  margin-right: 10px;
}
.bills-container .bill-list .bill-item .left .info .category {
  display: block;
  font-size: 16px;
  color: #282828;
  margin-bottom: 5px;
}
.bills-container .bill-list .bill-item .left .info .remark {
  font-size: 12px;
  color: #848484;
  margin-top: 3px;
}
.bills-container .bill-list .bill-item .amount {
  font-size: 18px;
}
